generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Garagem {
  id      Int      @id @default(autoincrement())
  nome    String   @unique
  eventos Evento[]
}

model Evento {
  id         Int      @id @default(autoincrement())
  tipo       String   // 'entrada' ou 'saida'
  createdAt  DateTime @default(now())
  garagemId  Int
  garagem    Garagem  @relation(fields: [garagemId], references: [id])
}
